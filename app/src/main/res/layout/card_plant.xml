<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/padding_small"
    android:background="@drawable/bg_frame_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView android:id="@+id/plant_thumbnail"
        android:src="@drawable/ic_plant_tomato"
        android:layout_width="@dimen/badge_plant"
        android:layout_height="@dimen/badge_plant" />
    <com.senior.gizgiz.hydronet.HelperClass.CustomTextView android:id="@+id/plant_name"
        android:text="tomato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>