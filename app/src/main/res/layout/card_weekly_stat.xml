<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/padding_small"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.senior.gizgiz.hydronet.HelperClass.CustomTextView
        android:id="@+id/weekly_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View android:background="@color/alto_gray"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout android:id="@+id/weekly_water_group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.senior.gizgiz.hydronet.HelperClass.CustomTextView
                android:text="Water"
                app:textStyle="bold"
                android:textSize="@dimen/txt_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--<com.senior.gizgiz.hydronet.HelperClass.CustomTextView-->
                <!--android:text="ideally 10 cm"-->
                <!--android:textSize="@dimen/small_text"-->
                <!--app:textStyle="bold"-->
                <!--android:textColor="@color/gray"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->
            <com.senior.gizgiz.hydronet.HelperClass.CustomTextView
                android:id="@+id/weekly_water_value"
                android:text="13 cm"
                android:textColor="@color/blue"
                app:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  />
        </LinearLayout>
        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/weekly_water_graph"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout android:id="@+id/weekly_ph_group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.senior.gizgiz.hydronet.HelperClass.CustomTextView
                android:text="pH"
                app:textStyle="bold"
                android:textSize="@dimen/txt_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--<com.senior.gizgiz.hydronet.HelperClass.CustomTextView-->
                <!--android:text="ideally 6 ~ 7"-->
                <!--android:textSize="@dimen/small_text"-->
                <!--app:textStyle="bold"-->
                <!--android:textColor="@color/gray"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->
            <com.senior.gizgiz.hydronet.HelperClass.CustomTextView
                android:id="@+id/weekly_ph_value"
                android:text="6.4"
                android:textColor="@color/green"
                app:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  />
        </LinearLayout>
        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/weekly_ph_graph"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout android:id="@+id/weekly_ec_group"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.senior.gizgiz.hydronet.HelperClass.CustomTextView
                android:text="EC"
                android:textSize="@dimen/txt_list_item"
                app:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--<com.senior.gizgiz.hydronet.HelperClass.CustomTextView-->
                <!--android:text="ideally 1.8 ~ 2.4"-->
                <!--android:textSize="@dimen/small_text"-->
                <!--app:textStyle="bold"-->
                <!--android:textColor="@color/gray"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->
            <com.senior.gizgiz.hydronet.HelperClass.CustomTextView
                android:id="@+id/weekly_ec_value"
                android:text="2.6"
                android:textColor="@color/orange"
                app:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  />
        </LinearLayout>
        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/weekly_ec_graph"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>