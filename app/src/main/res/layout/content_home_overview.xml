<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_small"
        android:layout_marginRight="@dimen/padding_small">
        <LinearLayout android:id="@+id/overview_home"
            android:background="@drawable/bg_frame_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btn_show_detail_frag"
            android:padding="@dimen/padding_small"
            android:orientation="vertical">
            <LinearLayout android:id="@+id/upper_group"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_gravity="center">
                <TableLayout android:id="@+id/count_group"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_span="2">
                            <com.senior.gizgiz.hydronet.HelperClass.CustomTextView
                                android:id="@drawable/bg_badge_count"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/bg_badge_count"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="count"
                                android:textColor="@color/white"
                                android:textSize="@dimen/badge_label" />
                        </LinearLayout>
                    </TableRow>
                    <TableRow android:id="@+id/planted_group">
                        <com.senior.gizgiz.hydronet.HelperClass.CustomTextView
                            android:id="@+id/num_planted"
                            android:text="16"
                            custom:textStyle="bold"
                            android:textAlignment="viewEnd"
                            android:textSize="@dimen/num_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <com.senior.gizgiz.hydronet.HelperClass.CustomTextView
                            android:text="planted"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </TableRow>
                    <TableRow android:id="@+id/growing_group">
                        <com.senior.gizgiz.hydronet.HelperClass.CustomTextView
                            android:id="@+id/num_growing"
                            android:text="8"
                            custom:textStyle="bold"
                            android:textAlignment="viewEnd"
                            android:textSize="@dimen/num_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <com.senior.gizgiz.hydronet.HelperClass.CustomTextView
                            android:text="growing"
                            android:layout_marginLeft="5dp"
                            android:textSize="@dimen/label"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </TableRow>
                    <TableRow android:id="@+id/harvested_group">
                        <com.senior.gizgiz.hydronet.HelperClass.CustomTextView
                            android:id="@+id/num_harvested"
                            android:text="4"
                            custom:textStyle="bold"
                            android:textAlignment="viewEnd"
                            android:textSize="@dimen/num_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <com.senior.gizgiz.hydronet.HelperClass.CustomTextView
                            android:text="harvested"
                            android:layout_marginLeft="5dp"
                            android:textSize="@dimen/label"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </TableRow>
                    <TableRow android:id="@+id/failed_group">
                        <com.senior.gizgiz.hydronet.HelperClass.CustomTextView
                            android:id="@+id/num_failed"
                            android:text="4"
                            custom:textStyle="bold"
                            android:textAlignment="viewEnd"
                            android:textSize="@dimen/num_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <com.senior.gizgiz.hydronet.HelperClass.CustomTextView
                            android:text="failed"
                            android:layout_marginLeft="5dp"
                            android:textSize="@dimen/label"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </TableRow>
                </TableLayout>
                <View
                    android:background="@color/alto_gray"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="match_parent"
                    android:layout_width="1dp" />
                <LinearLayout android:id="@+id/status_group"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.senior.gizgiz.hydronet.HelperClass.CustomTextView
                        android:text="stat"
                        android:textColor="@color/white"
                        android:textSize="@dimen/badge_label"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_badge_status"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                </LinearLayout>
            </LinearLayout>
            <View android:background="@color/alto_gray"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout android:id="@+id/lower_group"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView android:id="@+id/farm_bed_layout"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_bed_layout"/>
                <LinearLayout android:id="@+id/summary_sensor_group"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/padding_so_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/summary_sensor_water"
                        android:gravity="center"
                        android:layout_margin="@dimen/padding_so_small"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout android:background="@drawable/bg_frame_sensor"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <ImageView
                                android:src="@drawable/ic_sensor_water"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />
                            <com.senior.gizgiz.hydronet.HelperClass.CustomTextView
                                android:text="72%"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout android:id="@+id/summary_sensor_ph"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/padding_so_small"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@drawable/bg_frame_sensor"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <ImageView
                                android:src="@drawable/ic_sensor_ph"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />
                            <com.senior.gizgiz.hydronet.HelperClass.CustomTextView
                                android:text="72%"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout android:id="@+id/summary_sensor_ec"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/padding_so_small"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@drawable/bg_frame_sensor"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <ImageView
                                android:src="@drawable/ic_sensor_ec"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />
                            <com.senior.gizgiz.hydronet.HelperClass.CustomTextView
                                android:text="72%"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageButton android:id="@+id/btn_show_detail_frag"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_expand_down_arrow"
            android:padding="@dimen/padding_so_small"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</FrameLayout>